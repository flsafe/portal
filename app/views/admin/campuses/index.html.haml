- model_class = Campus
= link_to "New Campus", new_admin_campus_path, :class => 'btn btn-primary'
%br
%br
%table.table
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      %th
  %tbody
    - @campuses.each do |campus|
      %tr
        %td= campus.name
        %td= campus.city
        %td= campus.state
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_campus_path(campus), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_campus_path(campus), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-default'

