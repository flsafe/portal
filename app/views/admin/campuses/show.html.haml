- model_class = Campus
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize
%p
  %strong= model_class.human_attribute_name(:school) + ':'
  %br
  = @campus.school.name
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @campus.name
%p
  %strong= model_class.human_attribute_name(:custom_domain) + ':'
  %br
  = @campus.custom_domain
%p
  %strong= model_class.human_attribute_name(:website) + ':'
  %br
  = @campus.website
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @campus.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @campus.state

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_campuses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_campus_path(@campus), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_campus_path(@campus), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'