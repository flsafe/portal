- unless defined? target_path
  - target_path = [:admin, @company]

= form_for target_path, :html => { :class => 'form form-horizontal' } do |f|
  - if @company.errors.any? 
    .errorExplaination.alert.alert-danger
      %p
        = "#{pluralize(@company.errors.count, 'error')} prevented your profile from being saved."
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :name
    = f.text_field :name, :class => 'form-control'
  .control-group
    = f.label :description, :class => 'control-label'
    = f.text_area :description, :class => 'form-control'
  .control-group
    = f.label :website, :class => 'control-label'
    = f.text_field :website, :class => 'form-control'
  .control-group
    = f.label :address1, 'Address', :class => 'control-label'
    = f.text_field :address1, :class => 'form-control'
  .control-group
    = f.label :city, :class => 'control-label'
    = f.text_field :city, :class => 'form-control'
  .control-group
    = f.label :state, :class => 'control-label'
    = f.text_field :state, :class => 'form-control'
  .control-group
    = f.label :zip, :class => 'control-label'
    = f.text_field :zip, :class => 'form-control'
  .control-group
    = f.label :phone, :class => 'control-label'
    = f.text_field :phone, :class => 'form-control'
  %br
  = f.submit "Save", :class => 'btn btn-primary'
