= form_for [:admin, @school], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :phone, :class => 'control-label'
    .controls
      = f.text_field :phone, :class => 'text_field'
  .control-group
    = f.label :custom_domain, :class => 'control-label'
    .controls
      = f.text_field :custom_domain, :class => 'text_field'
  .control-group
    = f.label :website, :class => 'control-label'
    .controls
      = f.text_field :website, :class => 'text_field'
  .control-group
    = f.label :address1, :class => 'control-label'
    .controls
      = f.text_field :address1, :class => 'text_field'
  .control-group
    = f.label :address2, :class => 'control-label'
    .controls
      = f.text_field :address2, :class => 'text_field'
  .control-group
    = f.label :city, :class => 'control-label'
    .controls
      = f.text_field :city, :class => 'text_field'
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group
    = f.label :zip, :class => 'control-label'
    .controls
      = f.text_field :zip, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_schools_path, :class => 'btn'
