- model_class = School
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
= link_to t('.new', :default => t("helpers.links.new")), new_admin_school_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:custom_domain)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @schools.each do |school|
      %tr
        %td= school.id 
        %td= link_to school.name, admin_school_path(school)
        %td= school.custom_domain
        %td=l school.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_school_path(school), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_school_path(school), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

