- model_class = School
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%ul
  %li= link_to 'Users', admin_school_users_path(@school)
  %li= link_to 'Companies', admin_companies_path

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @school.name
%p
  %strong= model_class.human_attribute_name(:custom_domain) + ':'
  %br
  = @school.custom_domain
%p
  %strong= model_class.human_attribute_name(:website) + ':'
  %br
  = @school.website
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @school.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @school.state

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_schools_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_school_path(@school), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_school_path(@school), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'