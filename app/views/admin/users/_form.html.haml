= form_for target_path, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :email, :class => ''
    .form-control
      = f.text_field :email, :class => 'form-control'

  .form-group
    = f.label :password, :class => ''
    .form-control
      = f.password_field :password, :class=>'form-control'

  .form-group
    = f.label :password_confirmation, :class => ''
    .form-control
      = f.password_field :password_confirmation, :class=>'form-control'

  %fieldset
    %legend Profile
    .form-group
      = f.label :first_name, :class => ''
      .form-control
        = f.text_field :first_name, :class => 'form-control'

    .form-group
      = f.label :last_name, :class => ''
      .form-control
        = f.text_field :last_name, :class => 'form-control'

    .form-group
      = f.label :bio, :class => ''
      .form-control
        = f.text_field :bio, :class => 'form-control'

    .form-group
      = f.label :address1, :class => ''
      .form-control
        = f.text_field :address1, :class => 'form-control'

    .form-group
      = f.label :address2, :class => ''
      .form-control
        = f.text_field :address2, :class => 'form-control'

    .form-group
      = f.label :city, :class => ''
      .form-control
        = f.text_field :city, :class => 'form-control'

    .form-group
      = f.label :state, :class => ''
      .form-control
        = f.text_field :state, :class => 'form-control'

    .form-group
      = f.label :zip, :class => ''
      .form-control
        = f.text_field :zip, :class => 'form-control'

    .form-group
      = f.label :type, :class => ''
      .form-control
        = f.select :type, options_for_select(['Student', 'Instructor', 'Staff'], @user.type)

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'