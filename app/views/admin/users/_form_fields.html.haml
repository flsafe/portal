- user = @user || user

%br

.fieldset
  %legend password
  .form-group
    = f.label :email, :class => ''
    = f.text_field :email, :class => 'form-control'

  .form-group
    = f.label :password, :class => ''
    = f.password_field :password, :class=>'form-control'

  .form-group
    = f.label :password_confirmation, :class => ''
    = f.password_field :password_confirmation, :class=>'form-control'

%br

%fieldset
  %legend info 

  .form-group
    = image_tag user.avatar.medium_avatar, class: 'img-rounded'

  .form-group
    = f.label :avatar, "Avatar Picture"
    = f.file_field :avatar, class: ''

  .form-group
    = f.label :first_name, :class => ''
    = f.text_field :first_name, :class => 'form-control field'

  .form-group
    = f.label :last_name, :class => ''
    = f.text_field :last_name, :class => 'form-control field'

  .form-group
    = f.label :phone, :class => ''
    = f.text_field :phone, :class => 'form-control'

  .form-group
    = f.label :bio, :class => ''
    = f.text_area :bio, :class => 'form-control', rows: '8'

  .form-group
    = f.label :address1, :class => ''
    = f.text_field :address1, :class => 'form-control'

  .form-group
    = f.label :address2, :class => ''
    = f.text_field :address2, :class => 'form-control'

  .form-group
    = f.label :city, :class => ''
    = f.text_field :city, :class => 'form-control'

  .form-group
    = f.label :state, :class => ''
    = f.text_field :state, :class => 'form-control'

  .form-group
    = f.label :zip, :class => ''
    = f.text_field :zip, :class => 'form-control'

  - if current_user.admin_or_staff?
    .form-group
      = f.label :type, :class => ''
      = f.select :type, options_for_select(['Student', 'Instructor', 'Staff'], user.type), {}, class: 'form-control'
