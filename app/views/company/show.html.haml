%h1= @company.name

%ul
  %li= link_to "Edit My Company", company_edit_path(@company.slug)
  %li= link_to "Create A New Career Opportunity", new_company_opportunity_url(@company.slug)

%h2 Career Opportunities
%ul
  - @opportunities[0..2].each do |o|
    %li= link_to o.title, edit_company_opportunity_url(@company.slug, o) 
  = link_to "More..", company_opportunities_path(@company.slug)
