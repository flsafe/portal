.row
  .activity-message-box
    .col-sm-1
      = render 'message_confirmations/toggle_confirmation_button', msg_id: msg.id, confirmed: @confirmed[msg.id]
    .col-sm-3
      %span.timestamp= msg.created_at.to_s(:long)
    .col-sm-8
      %span.staff_name= msg.application.application_state_changed_by.name
      %span.message recommended
      %span.message= link_to "#{msg.application.student.name}'s application", employer_opportunity_application_path(msg.application.opportunity, msg.application)
      %span.message to 
      %span.opportunity= link_to msg.application.opportunity.title, edit_employer_opportunity_path(msg.application.opportunity)
      %hr