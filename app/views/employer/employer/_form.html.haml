= form_for @company, url: company_path(@company.slug) do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :address1
    = f.text_field :address2
  .form-group
    = f.label :address2
    = f.text_field :address2
  .form-group
    = f.label :city
    = f.text_field :city
  .form-group
    = f.label :state
    = f.text_field :state
  .form-group
    = f.label :zip
    = f.text_field :zip
  .form-group
    = f.label :phone
    = f.text_field :phone
  .form-group
    = f.submit "Update", class: 'btn btn-primary'