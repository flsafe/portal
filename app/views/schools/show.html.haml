- model_class = School
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @school.name
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @school.phone
%p
  %strong= model_class.human_attribute_name(:custom_domain) + ':'
  %br
  = @school.custom_domain
%p
  %strong= model_class.human_attribute_name(:website) + ':'
  %br
  = @school.website
%p
  %strong= model_class.human_attribute_name(:address1) + ':'
  %br
  = @school.address1
%p
  %strong= model_class.human_attribute_name(:address2) + ':'
  %br
  = @school.address2
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @school.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @school.state
%p
  %strong= model_class.human_attribute_name(:zip) + ':'
  %br
  = @school.zip

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), schools_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_school_path(@school), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), school_path(@school), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
