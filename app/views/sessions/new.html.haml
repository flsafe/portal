
.login-form
  - if flash[:alert]
    %p{id: 'notice'}= flash[:alert]

  = form_tag do
    %fieldset
      %legend Log In
      .form-group
        = label_tag :email, 'Email'
        = text_field_tag :email, params[:email], class: 'form-control'

      .form-group
        = label_tag :password, 'password'
        = password_field_tag :password, params[:password], class: 'form-control'

      = submit_tag "Login"

