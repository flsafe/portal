%div{id: 'application-events'}
  - @events.each do |e|
    .media
      %hr
      .media-body
        .application-event
          .row
            .col-sm-3.event-date
              = e.event_date.to_formatted_s(:long) if e.event_date
            .col-sm-8
              .event-title
                = e.title.to_s.titleize
              .event-description
                %p= e.notes
                %p= e.description
      .media-right
        - if e.id.present?
          = link_to "Delete", staff_destroy_student_placement_event_path(e), method: :delete, remote: true, class: 'btn btn-xs btn-danger'