.row
  .col-sm-9
    .row
      - students.in_groups_of(3) do |group|
        - group.select(&:present?).each do |student|
          .col-sm-6
            .panel.panel-default
              .person-box{'data-student-id': student.id}
                .panel-body
                  = image_tag student.avatar.medium_avatar, class: 'img-circle'
                .panel-footer
                  .name
                    = student.name
                  .info
                    .semester
                      = "#{student.semester} #{student.year}".titleize
                    .email
                      = student.email
                    .phone
                      = student.phone
                  %br
                  .actions
                    = link_to "Recommend", staff_toggle_opportunity_recommendation_path(@opportunity, student), class: 'btn btn-xs btn-primary', remote: true, method: :post
                    = link_to "View Resume", staff_student_resume_path(student), class: 'btn btn-xs btn-default'
                    = link_to "View Applications", staff_student_placement_profile_path(student), class: 'btn btn-xs btn-default'
