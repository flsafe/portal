= content_for(:sidebar) do
  = render 'sidebar', active: :students

= content_for(:center_content) do
  = render 'students_tabs', active: :students
  %ol.breadcrumb
    %li= link_to "Students", staff_students_path
    %li= link_to "#{@student.first_name}", staff_student_placement_profile_path(@student)
    %li.active Edit
  %br
  .row
    .col-sm-12
      .panel.panel-default
        .panel-body
          = render 'student_profile_header'
  .row
    .col-sm-12
      .application-events-title 
        %span.title= @application.opportunity.title
        %span.company= @application.opportunity.company.name
        %span.location= "#{@application.opportunity.city} #{@application.opportunity.state}"
  .row
    .col-sm-7
      - @events.each do |e|
        .media
          %hr
          .media-body
            .application-event
              .row
                .col-sm-3.event-date
                  = e.event_date.to_formatted_s(:long) if e.event_date
                .col-sm-8
                  .event-title
                    = e.title.to_s.titleize
                  .event-description
                    %p= e.notes
                    %p= e.description
          .media-right
            - if e.id.present?
              = link_to "Delete", staff_destroy_student_placement_event_path(e), method: :delete, class: 'btn btn-xs btn-danger'
    .col-sm-5
      .panel.panel-default
        .panel-body
          = render 'new_student_placement_event_form'

