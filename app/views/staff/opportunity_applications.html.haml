= content_for(:sidebar) do
  = render 'sidebar', active: :opportunities

= content_for(:center_content) do
  = render 'opportunities_tabs', active: :opportunities
  %ol.breadcrumb
    %li= link_to "Jobs", staff_opportunities_path
    %li= link_to "Applications"
  = render 'opportunity_box', opp: @opportunity, actions: false
  %h1 Applicants
  %hr
  - if @applications.any?
    = render 'application_boxes', applications: @applications
  - else
    %h1 There are no applications yet.
  = will_paginate @applications, renderer: BootstrapPagination::Rails