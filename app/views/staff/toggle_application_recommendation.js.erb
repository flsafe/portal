$('#recommended-applications').html("<%= escape_javascript render('recommended_applications')%>");
<% if @recommendation %>
  $('#star-<%= @application.id %>').removeClass('hide-star');
  $('#button-<%= @application.id %>').removeClass('btn-primary');
  $('#button-<%= @application.id %>').addClass('btn-warning');
<% else %>
  $('#star-<%= @application.id %>').addClass('hide-star');
  $('#button-<%= @application.id %>').removeClass('btn-warning');
  $('#button-<%= @application.id %>').addClass('btn-primary');
<% end %>