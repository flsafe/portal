= render partial: 'tabs', locals: {active_tab: {opportunities: true}}

%ol.breadcrumb
  %li.active Opportunities

.row
  .col-sm-3
    %input.form-control{:type => 'text', :placeholder=>'Search Keyword'}
  .col-sm-3
    %input.form-control{:type => 'text', :placeholder=>'City'}
.row
  .col-sm-12
    - @companies.each do |company|
      .opportunity-box
        %hr
        .row
          .col-sm-12
            .media
              .media-left
                %img.media.media-top{:src => 'http://placehold.it/125x100'}
              .media-body
                %div
                  %strong= company.name 
                  %span= company.city + ','
                  %span= company.state
                %p= company.description
                %br
                - company.opportunities.order(created_at: :desc).each do |opp|
                  %div
                    = link_to "#{opp.title} #{opp.city}, #{opp.state}", student_opportunity_path(opp)
                    - if @applied_opportunities.include?(opp)
                      %em= "Applied"
                    - else
                      %em= "posted #{time_ago_in_words(opp.created_at)} ago"
                    %p= opp.skills
= will_paginate(@companies, renderer: BootstrapPagination::Rails)
