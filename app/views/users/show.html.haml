- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @user.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @user.last_name
%p
  %strong= model_class.human_attribute_name(:bio) + ':'
  %br
  = @user.bio
%p
  %strong= model_class.human_attribute_name(:address1) + ':'
  %br
  = @user.address1
%p
  %strong= model_class.human_attribute_name(:address2) + ':'
  %br
  = @user.address2
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @user.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @user.state
%p
  %strong= model_class.human_attribute_name(:zip) + ':'
  %br
  = @user.zip
%p
  %strong= model_class.human_attribute_name(:password_digest) + ':'
  %br
  = @user.password_digest
%p
  %strong= model_class.human_attribute_name(:role) + ':'
  %br
  = @user.role

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
